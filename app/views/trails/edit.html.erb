<%= form_with url: "/trails/#{@trail.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :difficulty %>
  <%= form.text_field :difficulty %>
  <%= form.label :open %>
  <%= form.text_field :open, value: @trail.open %>
  <%= form.submit "Update Trail" %>
<% end %>
